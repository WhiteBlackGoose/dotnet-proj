    "version": "0.2.0",
    "configurations": [
        {
            "name": "dotnet-proj debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Debug dotnet-proj",
            "program": "${workspaceFolder}/dotnet-proj-cli/bin/Debug/net6.0/dotnet-proj-cli.dll",
            "args": [
                // "create",
                // "--object=./tests/Directory.Build.props"
                "add",
                "--object",
                "./tests/Directory.Build.props",
                "--property",
                "Authors",
                "--value",
                "Me"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}